@inject Microsoft.AspNetCore.Identity.SignInManager<Microsoft.AspNetCore.Identity.IdentityUser> signInManager

@if (signInManager.IsSignedIn(User))
{
	<form method="post" id="logoutForm" asp-action="LogOff" asp-controller="Account">
		<ul class="nav navbar-nav">
			<li class="nav-link">Hello @User.Identity.Name</li>
			<li><a class="nav-link" asp-controller="Account" asp-action="LogOff">Log out</a></li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav"> 
		<li class="nav-item">
			<a class="nav-link text-white" id="registeLink" asp-controller="Account" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-white" id="registeLink" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	</ul>
}