@inject Microsoft.AspNetCore.Identity.SignInManager<AmbulanceManagement.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
	<form method="post" id="logoutForm" asp-controller="Account" asp-action="LogOff">
		<ul class="nav navbar-nav">
			<li class="nav-link">Hello @User.Identity.Name</li>
			<li><button type="submit">Log out</button></li>
			<li class="nav-item">
				<a class="nav-link text-black" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
			</li>
		</ul>
	</form>

}
else
{
	<ul class="nav navbar-nav"> 
		
		<li class="nav-item">
			<a class="nav-link text-black" id="registerLink" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	</ul>
}