@model AmbulanceManagement.ViewModels.EditAccountViewModel

<h2>Edit User</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" value="@Model.Number" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option value="Male" selected="@Model.Gender == Gender.Male">Male</option>
            <option value="Female" selected="@Model.Gender == Gender.Female">Female</option>
            <option value="Other" selected="@Model.Gender == Gender.Other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Education"></label>
        <input asp-for="Education" class="form-control" value="@Model.Education" />
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="Nurse" selected="@Model.Type == Type.Nurse">Nurse</option>
            <option value="Cardiologist" selected="@Model.Type == Type.Cardiologist">Cardiologist</option>
            <option value="Dermatologist" selected="@Model.Type == Type.Dermatologist">Dermatologist</option>
            <option value="Radiologist" selected="@Model.Type == Type.Radiologist">Radiologist</option>
            <option value="Gynecologist" selected="@Model.Type == Type.Gynecologist">Gynecologist</option>
            <option value="Pulmonologist" selected="@Model.Type == Type.Pulmonologist">Pulmonologist</option>
            <option value="Allergist" selected="@Model.Type == Type.Allergist">Allergist</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control">@Model.Biography</textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

