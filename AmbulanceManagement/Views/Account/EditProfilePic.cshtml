@model AmbulanceManagement.ViewModels.ChangeAccountProfilePicViewModel



<form asp-action="EditProfilePic" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ProfilePicture" class="control-label">Profile Picture:</label>
        <input asp-for="ProfilePicture" type="file" class="form-control" />
        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>